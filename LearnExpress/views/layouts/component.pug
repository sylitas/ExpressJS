  block style
  style(type='text/css').
    html{
      height:100%;
    }
    #form_submit{
      border: 1px solid blue !important;
    }
#preloader
  .loader
.page-container
  .sidebar-menu
    .sidebar-header
      .logo
        a(href='#')
          img(src='/../dashboard/assets/images/icon/logo.png' alt='logo')
    .main-menu
      .menu-inner
        nav
          ul#menu.metismenu
            li
              a(href='javascript:void(0)' aria-expanded='true')
                i.ti-dashboard
  // sidebar menu area end
  // main content area start
  .main-content
    // header area start
    .header-area
      .row.align-items-center
        .col-md-6.col-sm-8.clearfix
          block nav
        .col-md-6.col-sm-4.clearfix
          .user-profile.pull-right
            h4.user-name.dropdown-toggle(data-toggle='dropdown')
              | #{email}
              i.fa.fa-angle-down
            .dropdown-menu
              a.dropdown-item(href='/logout') Log Out
    // header area end
    block content
    .footer-area
block footer
